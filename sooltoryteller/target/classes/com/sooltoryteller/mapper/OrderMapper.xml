<!-- 1. 구매하기 버튼에서 바로 넘어오기 -->
<!-- 상품 사진, 상품 정보, 주문 수량, 판매자, 배송비, 주문금액 (단가 x 수량) -->
<select id="getOrdInfo" resultType="com.sooltoryteller.domain.OrderJoinVO">
	select ordList.* from (
		select l.liq_thumb, l.nm liqNm, d.ord_qty, c.nm liqCoNm, d.dlvy_fee, d.ord_prc
		from liq l, liq_co c, ord_dtl d
		where l.liq_co_id = c.liq_co_id
		and l.liq_id = d.liq_id(+)
		and d.ord_prc = l.prc * d.ord_qty) ordList
</select>

